# Flask Configuration for Render
FLASK_APP=app.py
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=10000
FLASK_DEBUG=False

# File Upload Settings
MAX_FILE_SIZE=104857600
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp
ALLOWED_VIDEO_EXTENSIONS=mp4

# YOLO Model Configuration
MODEL_PATH=models/best.pt
MODEL_CONFIDENCE_THRESHOLD=0.25
MODEL_IOU_THRESHOLD=0.45

# YouTube Download Settings
YOUTUBE_MAX_DURATION=600
YOUTUBE_MAX_FILESIZE=104857600
YOUTUBE_QUALITY=720p

# Processing Settings
VIDEO_OUTPUT_FORMAT=webm
VIDEO_OUTPUT_CODEC=libvpx-vp9
PROCESSING_TIMEOUT=600

# CORS Settings (update with your frontend URL)
CORS_ORIGINS=https://your-frontend-url.com,http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
SECRET_KEY=your-secure-secret-key-here